# reload the configuration file
bindsym $mod+Shift+c reload

# exit sway (logs you out of your wayland session)
bindsym $mod+Shift+e exit

#Swaylock
bindsym $mod+Shift+z exec swaylock -i /usr/local/share/backgrounds/coffee.jpg

# kill focused window
bindsym $mod+q kill

#Screenshot
bindsym $mod+F12 exec swaygrab $screenshotDir/"Screenshot_`date +%Y-%m-%d-%T`.png"
